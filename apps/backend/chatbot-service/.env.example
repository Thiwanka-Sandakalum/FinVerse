# =============================================================================
# FinVerse Chatbot Service - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
PORT=8085
HOST=0.0.0.0
ENVIRONMENT=development
# Options: development, staging, production

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL Database (Primary database for application data)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# SQLite Database (Chat history storage)
CHAT_HISTORY_DB_PATH=data/chat_history.sqlite

# -----------------------------------------------------------------------------
# VECTOR DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# ChromaDB Configuration (for RAG/semantic search)
VECTOR_DB_PATH=data/vectordb
VECTOR_DB_COLLECTION_NAME=products
EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# AI/LLM CONFIGURATION
# -----------------------------------------------------------------------------
# Google Gemini API
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL_NAME=gemini-1.5-flash
GOOGLE_TEMPERATURE=0.7
GOOGLE_MAX_TOKENS=2048

# -----------------------------------------------------------------------------
# RAG SYSTEM CONFIGURATION
# -----------------------------------------------------------------------------
# Search and retrieval settings
MAX_SEARCH_RESULTS=5
SIMILARITY_THRESHOLD=0.7
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# CHAT CONFIGURATION
# -----------------------------------------------------------------------------
# Chat history and session management
MAX_CHAT_HISTORY=10
SESSION_TIMEOUT=3600
ENABLE_CHAT_HISTORY=true

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# API Keys and authentication (if implemented)
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_PRODUCT_COMPARISON=true
ENABLE_SQL_QUERIES=true
ENABLE_VECTOR_SEARCH=true
ENABLE_QUERY_CLASSIFICATION=true

# -----------------------------------------------------------------------------
# RATE LIMITING (if implemented)
# -----------------------------------------------------------------------------
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=3600

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS (if implemented)
# -----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_ENABLED=false

# -----------------------------------------------------------------------------
# DEVELOPMENT/DEBUG SETTINGS
# -----------------------------------------------------------------------------
# Enable/disable debug features
DEBUG_SQL_QUERIES=false
DEBUG_VECTOR_SEARCH=false
DEBUG_AI_RESPONSES=false
RELOAD_ON_CHANGE=true
